#############################################################
#THIS MAKES THE APPLICATIONS PLACES SYSTEM MENU ON THE PANEL
#USE PANEL STYLE
#############################################################


style "panelbar"
{
	fg[NORMAL] = @bg_color
	fg[ACTIVE] = @bg_color
	fg[PRELIGHT] = @bg_color
	fg[SELECTED] = @bg_color

engine "pixmap"
{
	image
	{
		function	= BOX
		state		= NORMAL
		file		= "Panel/panel-menubar.png"
		border		= { 3 , 3 , 3 , 3}
		stretch		= TRUE
	}

	
	image
	{
		function	= BOX
		state		= ACTIVE
		file		= "Panel/panel-bg.png"
		border		= { 2 , 2 , 2 , 2}
		stretch		= TRUE
	}

	
	image
	{
		function	= BOX
		state		= INSENSITIVE
		file		= "Panel/panel-bg.png"
		border		= { 2 , 2 , 2 , 2}
		stretch		= TRUE
	}

	
	image
	{
		function	= BOX
		state		= PRELIGHT
		recolorable	= TRUE
		file		= "Panel/menubar-item.png"
		border		= { 5 , 5 , 5 , 0}
		stretch		= TRUE
	}

}

}


