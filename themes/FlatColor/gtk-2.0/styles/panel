{
        fg[NORMAL]			= "#ffffff" 
        bg[NORMAL]			= "#444444" 
  	bg[PRELIGHT]			= "#666666" 
  	bg[SELECTED]			= @selected_fg_color 

xthickness = 5
ythickness = 4

